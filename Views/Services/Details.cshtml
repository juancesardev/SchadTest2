@model SchadTest.Models.Services

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Services</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PriceDescription)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PriceDescription)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class = "col-sm-10">
            @if (Model.Status == true)
            {
                <i class="fas fa-check-circle text-success"></i>
            }
            else
            {
                <i class="fas fa-times-circle text-danger"></i>
            }
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DateAdd)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DateAdd)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn-link">Edit</a> |
    <a asp-action="Index" class="btn-link"><i class="fas fa-chevron-circle-left"></i> Back to List</a>
</div>
